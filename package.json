{
  "name": "fe-boilerplate",
  "version": "1.0.0",
  "description": "Front-End 개발환경에 대한 Boilerplate 이다.",
  "main": "index.ts",
  "scripts": {
    "lint": "npx tslint -p ./config/typescript/tsconfig.dev.json",
    "test": "npx mocha --config ./.mocharc.json",
    "build": "npx rollup --config ./config/rollup/rollup.config.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx commitlint --config ./config/commitLint/commitlint.config.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luyin/FE-Boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Luyin/FE-Boilerplate/issues"
  },
  "homepage": "https://github.com/Luyin/FE-Boilerplate#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.10",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "rollup": "^1.1.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "sinon": "^7.2.7",
    "sinon-chai": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.2"
  }
}
